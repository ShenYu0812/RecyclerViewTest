<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_positive_325"
    android:layout_height="@dimen/px_positive_265"
    android:background="@drawable/selector_home_apps"
    android:focusable="true">

    <ImageView
        android:id="@+id/home_back_2"
        android:layout_width="@dimen/px_positive_247"
        android:layout_height="@dimen/px_positive_183"
        android:background="@drawable/home_grid_apps_back1"
        android:layout_centerInParent="true"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/home_grid_item_icon"
        android:layout_width="@dimen/px_positive_132"
        android:layout_height="@dimen/px_positive_132"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/home_back_2"
        android:layout_marginTop="@dimen/px_positive_10"
        android:contentDescription="@string/home_grid_item_icon" />

    <TextView
        android:id="@+id/home_grid_item_name"
        android:layout_width="@dimen/px_positive_250"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_back_2"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/px_positive_35"
        android:text="@string/hello_app"
        android:textColor="#FFFFFF"
        android:background="@drawable/home_grid_apps_back2"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="marquee"/>


</RelativeLayout>